<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Poradnia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/boxicons/css/boxicons.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet">
    @if (TempData["Message"] != null)
    {
        <partial name="_StatusMessage" model="@TempData["Message"]" />
    }
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><span style="color: #5e9693;">Psycho</span><span style="color: #999;">logist</span></a>
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                        data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="about">O Nas</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Experts" asp-action="GetAllDoctor">Zespół</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="kontakt">Kontakt</a></li>
                            
                            @if (User.IsInRole("Specialist"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Experts" asp-action="PanelVisits">Wizyty</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                            {
                                <div class="btn-group navbar-nav">
                                    <a class="nav-link nav-item dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Panel Administratora</a>
                                    <div class="nav-item dropdown-menu add-white-color">
                                        <a class="nav-link" asp-controller="Users" asp-action="Index">Użytkownicy</a>
                                        <a class="nav-link" asp-controller="Reports" asp-action="List">Przeglądaj zgłoszenia</a>
                                        <a class="nav-link" asp-controller="Experts" asp-action="Index">Zarządzaj specialistami</a>
                                    </div>
                                </div>
                            }
                        </ul>
                    </div>
                </div>
                <partial name="_loginPartial" />
            </div>
        </nav>
        <section>
            <div class="container">
                @RenderBody()
            </div>
        </section>

    </header>
    <section id="footer">
        <div class="footer" style="position: absolute">
            <!-- Grid container -->
            <div>
                <!-- Section: Social media -->
                <!-- Facebook -->
                <a class="btn btn-outline-dark btn-floating m-1" href="https://www.facebook.com/" role="button">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <!-- Google -->
                <a class="btn btn-outline-dark btn-floating m-1" href="https://www.google.com/" role="button">
                    <i class="fab fa-google"></i>
                </a>
                <!-- Instagram -->
                <a class="btn btn-outline-dark btn-floating m-1" href="https://www.instagram.com/" role="button">
                    <i class="fab fa-instagram"></i>
                </a>
                <!-- Linkedin -->
                <a class="btn btn-outline-dark btn-floating m-1" href="https://pl.linkedin.com/" role="button">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <!-- Github -->
                <a class="btn btn-outline-dark btn-floating m-1" href="https://github.com/Hamau12/Poradnia/tree/Scheduler" role="button">
                    <i class="fab fa-github"></i>
                </a>
                <!-- Section: Social media -->
            </div>
            <div class="text-center p-3">
                © 2020 Copyright:
                <a class="text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <!-- Copyright -->
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    $(function () {
        $(window).on('scroll', function () {
            if ($(window).scrollTop() > 10) {
            } else {
                $('.dropdown-menu').removeClass('show');

            }
        });
    });
</script>