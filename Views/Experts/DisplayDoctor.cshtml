@using Microsoft.AspNetCore.Identity;
@using SRP.Models.DTOs;
@model IList<SpecialistDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container profile-page">
    <div class="row">

        @foreach (var doctor in Model)
        {
            <div class="col-xl-6 col-lg-7 col-md-12">
                <div class="card profile-header">
                    <div class="body">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="profile-image float-md-right"> <img src="~/PImage/@doctor.ImageName" alt="@doctor.FirstName"> </div>
                            </div>
                            <div class="col-lg-8 col-md-8 col-12">
                                <h4 class="m-t-0 m-b-0"><strong>@doctor.FirstName</strong> @doctor.LastName</h4>
                                <span class="job_post">@doctor.Specialisation</span>
                                <p>@doctor.Description</p>
                                <div>
                                    <button class="btn btn-primary btn-round">Poznaj</button>
                                    <button class="btn btn-primary btn-round btn-simple">Umów wizytę</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin") || User.IsInRole("Specialist"))
    {
        <a class="btn btn-outline-warning" asp-controller="Experts" asp-action="Index">Użytkownicy</a>
    }
</div>
