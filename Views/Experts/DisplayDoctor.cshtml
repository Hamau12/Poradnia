@using Microsoft.AspNetCore.Identity;
@using SRP.Models.DTOs;
@model IList<SpecialistDTO>
@{
    Layout = "~/Views/Shared/_LayoutToStaticPages.cshtml";
}

<div class="container profile-page">
    <div class="row">

        @foreach (var doctor in Model)
        {
            <div class="col-xl-6 col-lg-7 col-md-12">
                <div class="card profile-header">
                    <div class="body">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="profile-image float-md-right"> <img src="~/PImage/@doctor.ImageName" alt="@doctor.FirstName"> </div>
                            </div>
                            <div class="col-lg-8 col-md-8 col-12">
                                <h4 class="m-t-0 m-b-0"><strong>@doctor.FirstName</strong> @doctor.LastName</h4>
                                <span class="job_post">@doctor.Specialisation</span>
                                <p>@doctor.Description</p>
                                <div>
                                    <a class="btn btn-outline-dark m-1" href="https://www.znanylekarz.pl/" role="button">Poznaj</a>
                                    <a asp-controller="Experts" asp-action="PatientsPanel" asp-route-parametr="@doctor.Id" class="btn btn-outline-dark m-1">Umów wizytę</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
